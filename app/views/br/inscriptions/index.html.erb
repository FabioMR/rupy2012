<div class="page-header">
  <h2>Listing inscriptions</h2>
</div>

<% @inscriptions_values.each do |item| %>
  <%= content_tag :div, "#{item.payment_status.blank? ? 'unlabeled' : item.payment_status}: #{item.count} inscriptions (R$ #{item.value})" %>
<% end %>
<br>

<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th>Number</th>
      <th>Date</th>
      <th>Name</th>
      <th>E-mail</th>
      <th>Status</th>
      <th>Value</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @inscriptions.each_with_index do |inscription, index| %>
      <tr>
        <td class="nowrap"><%= index.next %></td>
        <td class="nowrap"><%= inscription.id_formatted %></td>
        <td class="nowrap"><%= l inscription.created_at, :format => :short %></td>
        <td><%= inscription.name %></td>
        <td><%= inscription.email %></td>
        <td class="nowrap"><%= inscription.payment_status %></td>
        <td class="nowrap"><%= inscription.payment_value %></td>
        <td class="nowrap">
          <div>
            <%= link_to 'Edit', [:edit, inscription], :class => 'btn btn-small' %>
          </div>
        </td>
      </tr>
    <% end %>
  <tbody>
</table>
